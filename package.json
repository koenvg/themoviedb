{
  "name": "themoviedb-api",
  "version": "0.0.2",
  "description": "Javascript wrapper for themovieDB. Can be used in node and browser side.",
  "main": "dist/index.js",
  "scripts": {
    "build": "gulp build",
    "lint": "gulp lint",
    "test": "jest --coverage",
    "test-watch": "jest --watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "urijs": "^1.18.10"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts}",
      "!**/__tests__/**",
      "!**/__mocks__/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts?$": "<rootDir>/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|js)$"
  },
  "devDependencies": {
    "@types/fetch-mock": "^5.8.2",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/jest": "^19.2.3",
    "@types/urijs": "^1.15.32",
    "fetch-mock": "^5.11.0",
    "gulp": "^3.9.1",
    "gulp-plumber": "^1.1.0",
    "gulp-tslint": "^8.1.0",
    "gulp-tslint-stylish": "^1.1.1",
    "gulp-typescript": "^3.1.7",
    "gulp-util": "^3.0.8",
    "jest": "^20.0.4",
    "tslint": "^5.3.2",
    "typescript": "^2.3.3"
  }
}
